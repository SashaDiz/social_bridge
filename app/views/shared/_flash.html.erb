<% if flash[:success] %>
  <div class="bg-green-500 text-white p-4 rounded-lg absolute bottom-10 right-10 text-sm">
    <%= flash[:success] %>
  </div>
<% end %>
<% if flash[:error] %>
  <div class="bg-red-500 text-white p-4 rounded-lg absolute bottom-10 right-10 text-sm">
    <%= flash[:error] %>
  </div>
<% end %>
